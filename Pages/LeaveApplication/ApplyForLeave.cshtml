@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_App";
}


<div class="main_content_iner ">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-12">
                <div class="dashboard_header mb_30">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="dashboard_header_title">
                                <h3>Apply For Leave</h3>
                            </div>
                        </div>
                       
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <div class="cs-modal">
                            <div class="modal-body">
                                <form id="leaveApplicationForm">
                                    <div class="form-group">
                                        <label>StartDate</label>
                                        <input name="Start Date " type="date" class="form-control mT-10 mB-20">
                                    </div>
                                    <div class="form-group">
                                        <label>EndDate</label>
                                        <input name="End Date" type="date" class="form-control mT-10 mB-20">
                                    </div>
                                    <div class="form-group">
                                        <label>Reason</label>
                                        <input name="Reasons For Leave" type="text" class="form-control mT-10 mB-20">
                                    </div>
                                    <div class="form-group">
                                        <label>EmergencyContact</label>
                                        <input name="Emergency Contact" type="text" class="form-control mT-10 mB-20">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label>Attachment</label>
                                        <input name="Attachment" type="text" class="form-control mT-10 mB-20">
                                        </div>
                                    
                                    <div class="form-group">
                                        <label>ContractStart</label>
                                        <textarea name="Contract Start" type="text" class="form-control mT-10 mB-20 h-120"></textarea>
                                    </div>
                                    <div class="form-group" >
                                        <label>ContractEnd</label>
                                         <textarea name="Contract End" type="text" class="form-control mT-10 mB-20 h-120"></textarea>
                                    </div>
                                    <br>
                                    <button class="btn btn-success">Submit </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                @* .card *@
            </div>
        </div>
    </div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
