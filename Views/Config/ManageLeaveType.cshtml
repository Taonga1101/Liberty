@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_App";
}

<div class="main_content_iner ">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="dashboard_header mb_50">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="dashboard_header_title">
                                <h3> Manage Leave Type</h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="dashboard_breadcam text-end">
                                <p><a href="#">Configurations</a> <i class="fas fa-caret-right"></i> Leave Types<i class="fas fa-caret-right"></i> Manage Leave Type</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="cs-modal">
                    <div class="modal-body">
                        <form id="leaveTypeForm">
                            <div class="form-group">
                                <label>Name</label>
                                <input name="name" type="text" class="form-control mT-10">
                            </div>
                            <div class="form-group">
                                <label>Code</label>
                                <input name="code" type="text" class="form-control mT-10">
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <input name="description" type="text" class="form-control mT-10">
                            </div>
                            <div class="form-group" style="display:none">
                                <label>Status</label>
                                <input value="Active" name="status" type="text" class="form-control mT-10">
                            </div>
                            <br>
                            <button class="btn btn-success">Submit this stuff :)</button>
                        </form>
                    </div>
                </div>
                @* .card *@
            </div>
        </div>
    </div>
</div>

<script src="~/js/manage-leave-type-script.js"></script>