@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_App";
    var offices = ViewData["offices"] as IEnumerable<Office>;
}
<div class="main_content_iner ">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-12">
                <div class="dashboard_header mb_30">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="dashboard_header_title">
                                <h3>Manage Departments</h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="dashboard_breadcam text-end">
                                
                                <p><a asp-controller="Config" asp-action="Index">Configurations</a> <i class="fas fa-caret-right"></i><a asp-controller="Config" asp-action="Departments">Departments</a><i class="fas fa-caret-right"></i> Manage Departments</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <div class="cs-modal">
                            <div class="modal-body">
                                <form id="departmentForm">
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input name="name" type="text" class="form-control mT-10 mB-20">
                                    </div>
                                    <div class="form-group">
                                        <label>Code</label>
                                        <input name="code" type="text" class="form-control mT-10 mB-20">
                                    </div>
                                    <div class="form-group">
                                        <label>Office</label>
                                        <select name="officeId" class="form-control mT-10 mB-20">
                                            <option value="" disabled selected>Select Office</option>
                                            @foreach (var office in offices)
                                            {
                                                
                                                <option value="@office.OfficeId" >@office.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group" style="display:none">
                                        <label>Status</label>
                                        <input value="Active" name="status" type="text" class="form-control mT-10 mB-20">
                                        </div>
                                    
                                    <br>
                                    <button class="btn btn-success">Submit ðŸ˜Š</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                @* .card *@
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/manage-department-script.js"></script>





