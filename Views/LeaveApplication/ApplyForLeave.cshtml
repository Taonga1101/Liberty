@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_App";
    var leaveTypes = ViewData["leaveTypes"] as IEnumerable<LeaveType>;

}


<div class="main_content_iner ">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-12">
                <div class="dashboard_header mb_30">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="dashboard_header_title">
                                <h3>Apply For Leave</h3>
                            </div>
                        </div>
                       
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <div class="cs-modal">
                            <div class="modal-body">
                                <form id="leaveApplicationForm">
                                    <div class="form-group">
                                        <label>Select Leave Type</label>
                                        <select name="leaveTypeId" type="date" class="form-control mT-10 mB-20">
                                            <option value=""disabled selected>Select Leave Type</option>
                                            @foreach (var leaveType in leaveTypes)
                                            {
                                                <option value ="@leaveType.LeaveTypeId">@leaveType.Name</option>
                                            }
                                        </select>
                                        </div>
                                    <div class="form-group">
                                        <label>Start Date</label>
                                        <input name="startDate" type="date" class="form-control mT-10 mB-20">
                                    </div>
                                    <div class="form-group">
                                        <label>End Date</label>
                                        <input name="endDate" type="date" class="form-control mT-10 mB-20">
                                    </div>
                                    <div class="form-group">
                                        <label>Reasons For Leave</label>
                                        <textarea name="reason" type="text" class="form-control mT-10 mB-20 h-120"></textarea>
                                    </div>
                                    @* <div class="form-group"> *@
                                    @*     <label>Attachment</label> *@
                                    @*     <input name="Attachment" type="file" class="form-control mT-10 mB-20"> *@
                                    @* </div> *@

                                    <div class="form-group">
                                        <label>Emergency Contact</label>
                                        <input name="emergencyContact" type="text" class="form-control mT-10 mB-20">
                                    </div>



                                    <br>
                                    <button class="btn btn-success">Submit </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                @* .card *@
            </div>
        </div>
    </div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/Apply-for-leave-script.js"></script>